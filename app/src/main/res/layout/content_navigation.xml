<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Navigation"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_navigation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/status" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/nav_profile"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/status"
                android:src="@drawable/profile"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="0dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="WELCOME "
                android:layout_marginTop="1dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/status" />

            <TextView
                android:id="@+id/nav_id"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:text="@string/nav_name"
                android:layout_marginTop="3dp"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/add2"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="#ffd3b6"
                android:elevation="4dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/add_In"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/add1_dash"
                    android:contentDescription="@string/title_add" />

                <TextView
                    android:id="@+id/add_Tn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/title_add1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/history"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="10dp"
                android:background="#adcbe3"
                android:elevation="4dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/history_In"
                    android:layout_width="75dp"
                    android:layout_height="66dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/history_nav"
                    android:contentDescription="@string/your_report" />

                <TextView
                    android:id="@+id/history_Tn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/your_report"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/setting1"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_marginStart="75dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:background="#5dbeb5"
                android:elevation="4dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/setting_In"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/setting_nav"
                    android:contentDescription="@string/status" />

                <TextView
                    android:id="@+id/setting_Tn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/settings"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/extra"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="10dp"
                android:background="#C6C8C4"
                android:elevation="4dp"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/extra_In"
                    android:layout_width="75dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/exit_nav"
                    android:contentDescription="@string/settings" />

                <TextView
                    android:id="@+id/extra_Tn"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/exit"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
